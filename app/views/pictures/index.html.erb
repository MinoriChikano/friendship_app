<p><%= notice %></p>

<table>
  <tr>
    <th>ユーザー</th>
    <th>内容</th>
  </tr>

<% @pictures.each do |picture| %>
  <tr>
    <td><%= picture.user.name %></td>
    <td><%= picture.content %></td>
    <td><%= link_to '詳細を確認' , picture_path(picture.id) %></td>
    <td><%= link_to "編集する" , edit_picture_path(picture.id) %></td>
    <td><%= link_to "削除する" , picture_path(picture.id), method: :delete %></td>
  </tr>
<% end %>
</table>

<%= link_to 'New Post' , new_picture_path %>
