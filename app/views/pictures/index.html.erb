<p><%= notice %></p>

<% @pictures.each do |picture| %>
  <div class = "index">
  <table>
  <tr>
    <th>ユーザー:</th>
    <td><%= picture.user.name %></td>
    <th>内容:</th>
    <td><%= picture.content %></td>
    <th>詳細:</th>
    <td><%= link_to '📕' , picture_path(picture.id) %></td>
    <th>edit:</th>
    <td><%= link_to '✏️' , edit_picture_path(picture.id) %></td>
    <th>delete</th>
    <td><%= link_to '🆑' , picture_path(picture.id), method: :delete %></td>
  </tr>
<% end %>
</table>
</div>


